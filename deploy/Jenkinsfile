    stage('============ Build Docker Image ============') {
      when {
        expression {
          return params.BUILD_DOCKER == 'Y'
        }
      }

      steps {
        echo "Current workspace is ${env.WORKSPACE}"
        dir("${env.WORKSPACE}") {
            script {
                app = docker.build("test")
            }
        }
      }
    }
  }
