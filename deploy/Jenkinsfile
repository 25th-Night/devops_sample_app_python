pipeline {
  agent any

  parameters {
    booleanParam(name : 'BUILD_DOCKER_IMAGE', defaultValue : true, description : 'BUILD_DOCKER_IMAGE')
    booleanParam(name : 'RUN_TEST', defaultValue : true, description : 'RUN_TEST')
    booleanParam(name : 'PUSH_DOCKER_IMAGE', defaultValue : true, description : 'PUSH_DOCKER_IMAGE')
    string(name : 'GIT_URL', defaultValue : 'https://github.com/dev-chulbuji/devops_sample_app_python', description : 'GIT_URL')
    string(name : 'GIT_BRANCH', defaultValue : 'master', description : 'GIT_BRANCH')
  }

  environment {
    REGION = "ap-northeast-2"
  }

  stages {
    stage('============ Clone repository ============') {
        when {
            expression {
                return env.GIT_URL != '' && env.GIT_BRANCH != ''
            }
        }
        steps {
            echo "Current workspace is ${params.WORKSPACE}"
            echo "Clone repository :: ${params.GIT_URL}"
            echo "Clone repository :: ${env.GIT_URL}"
            echo "Clone repository :: ${env.GIT_BRANCH}"

            git url: "${env.GIT_URL}",
                branch: "${env.GIT_BRANCH.replaceAll('origin/', '')}",
                credentialsId: 'github_jenkins_token'
        }
    }
    stage('============ Build Docker Image ============') {
        when {
            expression { return params.BUILD_DOCKER_IMAGE }
        }
        steps {
            echo "Stage Build"
        }
        post {
            always {
                echo "post stage"
            }
        }
    }
    stage('============ Run test code ============') {
        when { expression { return params.RUN_TEST } }
        steps {
            echo "Stage Test"
        }
    }
    stage('============ Push Docker Image ============') {
        when { expression { return params.PUSH_DOCKER_IMAGE } }
        steps {
            echo "Stage Test"
        }
    }
  }
  post {
    cleanup {
        echo "Post cleanup"
    }
  }
}



