pipeline {
  agent { label 'master' }
  
  environment {
    REGION = "ap-northeast-2"
    CODEBUILD_NAME = "jenkins-slave-codebuild"
  }

  stages {
    stage('============ Build Docker Image ============') {
        steps {
            awsCodeBuild(
              credentialsType: 'keys',
              projectName: '${CODEBUILD_NAME}',
              region: '${REGION}',
              sourceControlType: 'jenkins',
              sseAlgorithm: 'AES256',
              buildSpecFile: "deploy/buildspec.yml"
            )
        }
    }
  }
}



